---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get recent posts for suggestions
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead 
      title="页面未找到 - 零一格物" 
      description="抱歉，您访问的页面不存在。您可以返回首页或查看我们的最新文章。"
    />
  </head>
  <body>
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-8 text-center">
      <div class="space-y-8">
        <!-- Error Message -->
        <div class="space-y-4">
          <h1 class="text-6xl font-bold text-gray-400">404</h1>
          <h2 class="text-2xl font-semibold text-gray-700">页面未找到</h2>
          <p class="text-gray-600">
            抱歉，您访问的页面不存在或已被移动。
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
          >
            返回首页
          </a>
          <a 
            href="/blog" 
            class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
          >
            浏览博客
          </a>
        </div>

        <!-- Search Box -->
        <div class="max-w-md mx-auto">
          <div class="relative">
            <input 
              type="text" 
              placeholder="搜索文章..." 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              id="search-input"
            />
            <button 
              class="absolute right-2 top-2 text-gray-400 hover:text-gray-600"
              onclick="performSearch()"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Recent Posts -->
        {recentPosts.length > 0 && (
          <div class="text-left max-w-2xl mx-auto">
            <h3 class="text-xl font-semibold mb-4 text-center">或者查看最新文章</h3>
            <div class="space-y-4">
              {recentPosts.map((post) => (
                <a 
                  href={`/blog/${post.slug}/`}
                  class="block p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow"
                >
                  <h4 class="font-medium text-blue-600 hover:text-blue-800">
                    {post.data.title}
                  </h4>
                  <p class="text-gray-600 text-sm mt-1">
                    {post.data.description}
                  </p>
                  <time class="text-gray-400 text-xs">
                    {post.data.pubDate.toLocaleDateString('zh-CN')}
                  </time>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </main>
    <Footer />

    <script>
      function performSearch() {
        const searchTerm = document.getElementById('search-input').value.trim();
        if (searchTerm) {
          // Simple search redirect - can be enhanced with a proper search implementation
          window.location.href = `/blog?search=${encodeURIComponent(searchTerm)}`;
        }
      }
      
      // Allow Enter key to trigger search
      document.getElementById('search-input').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          performSearch();
        }
      });

      // Track 404 errors for analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'page_view', {
          page_title: '404 - Page Not Found',
          page_location: window.location.href,
          custom_map: {custom_parameter_1: 'error_page'}
        });
      }
    </script>
  </body>
</html>