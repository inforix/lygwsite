---
// SEO检查页面 - 仅在开发环境可用
if (import.meta.env.PROD) {
  return Astro.redirect('/');
}

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead 
      title="SEO检查 - 零一格物" 
      description="SEO优化检查页面"
    />
  </head>
  <body>
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-8">SEO优化检查</h1>
      
      <div class="space-y-6">
        <section class="bg-green-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4 text-green-800">✅ 已完成的SEO优化</h2>
          <ul class="space-y-2 text-green-700">
            <li>✓ robots.txt 配置</li>
            <li>✓ XML sitemap 生成</li>
            <li>✓ JSON-LD 结构化数据</li>
            <li>✓ Open Graph 标签</li>
            <li>✓ Twitter Cards</li>
            <li>✓ 语言标记 (zh-CN)</li>
            <li>✓ Canonical URLs</li>
            <li>✓ Meta descriptions</li>
            <li>✓ 响应式图片</li>
            <li>✓ RSS feed 优化</li>
            <li>✓ PWA manifest</li>
            <li>✓ 性能优化配置</li>
          </ul>
        </section>

        <section class="bg-blue-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4 text-blue-800">📊 博客文章统计</h2>
          <div class="grid grid-cols-2 gap-4 text-blue-700">
            <div>
              <strong>总文章数:</strong> {posts.length}
            </div>
            <div>
              <strong>最新文章:</strong> {posts.sort((a, b) => 
                new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
              )[0]?.data.title}
            </div>
          </div>
        </section>

        <section class="bg-yellow-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4 text-yellow-800">💡 SEO建议</h2>
          <ul class="space-y-2 text-yellow-700">
            <li>• 定期更新内容以提高搜索排名</li>
            <li>• 为每篇文章添加合适的关键词</li>
            <li>• 确保图片都有alt属性</li>
            <li>• 内部链接优化</li>
            <li>• 页面加载速度监控</li>
            <li>• 移动端体验优化</li>
          </ul>
        </section>

        <section class="bg-gray-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold mb-4">🔗 有用的SEO工具</h2>
          <ul class="space-y-2">
            <li><a href="https://search.google.com/search-console" class="text-blue-600 hover:underline" target="_blank">Google Search Console</a></li>
            <li><a href="https://www.bing.com/webmasters" class="text-blue-600 hover:underline" target="_blank">Bing Webmaster Tools</a></li>
            <li><a href="https://pagespeed.web.dev/" class="text-blue-600 hover:underline" target="_blank">PageSpeed Insights</a></li>
            <li><a href="https://schema.org/docs/schemas.html" class="text-blue-600 hover:underline" target="_blank">Schema.org</a></li>
          </ul>
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>